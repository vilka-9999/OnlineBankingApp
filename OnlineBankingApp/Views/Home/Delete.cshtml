@model OnlineBankingApp.Models.Account

@{
    ViewData["Title"] = "Delete Account";
}

<h1>Are you sure you want to delete this account?</h1>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
        background-color: #f9f9f9;
    }
    h1 {
        color: #dc3545; /* Red color to indicate a warning */
        text-align: center;
        margin-bottom: 20px;
    }
    .alert {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border: 1px solid #ffc107; /* Amber warning border */
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
    .alert-warning {
        background-color: #fff3cd;
        color: #856404;
    }
    p {
        margin: 10px 0;
        font-size: 16px;
    }
    form {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }
    .btn {
        padding: 10px 20px;
        border-radius: 4px;
        text-decoration: none;
        font-size: 14px;
    }
    .btn-danger {
        background-color: #dc3545;
        color: white;
        border: none;
    }
    .btn-danger:hover {
        background-color: #b02a37;
    }
    .btn-secondary {
        background-color: #6c757d;
        color: white;
        border: none;
    }
    .btn-secondary:hover {
        background-color: #5a6268;
    }
</style>

<div class="alert alert-warning">
    <p><strong>Account Number:</strong> @Model.AccountNumber</p>
    <p><strong>Account Type:</strong> @Model.AccountType</p>
    <p><strong>Balance:</strong> @Model.AccountBalance</p>

    <form method="post" asp-action="Delete">
        <input asp-for="AccountBalance" type="hidden"/>
        <input asp-for="AccountNumber" type="hidden" />
        <input asp-for="AccountType" type="hidden" />
        <input asp-for="BankId" type="hidden" />
        <input asp-for="UserId" type="hidden" />
        <input asp-for="AccountId" type="hidden" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
